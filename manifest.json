{
    "name": "Newsgroup Notifications",
    "short_name": "NNTPNotifications",
    "version": "1.0.1",
    "description": "Thunderbird Newsgroup Notifications",
    "author": "Martin Turner",
    "manifest_version": 3,
    "browser_specific_settings": {
        "gecko": {
            "id": "{8c1e3a77-45b9-4a27-9f4e-8f0f5cb83d7d}",
            "strict_min_version": "115.0"
        }
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "storage",
        "notifications",
        "webRequest"
    ],
    "host_permissions": [
        "https://discord.com/api/webhooks/*",
        "https://webhook.lewisakura.moe/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "64": "icons/rocket128.png",
        "32": "icons/rocket32.png",
        "16": "icons/rocket16.png",
        "128": "icons/rocket128.png"
    }
}