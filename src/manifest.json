{
  "name": "Newsgroup Notifications",
  "short_name": "NNTPNotify",
  "version": "1.1.2",
  "description": "Thunderbird Newsgroup Notifications.",
  "author": "Martin Turner",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "{8c1e3a77-45b9-4a27-9f4e-8f0f5cb83d7d}",
      "strict_min_version": "115.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      },
      "update_url": "https://raw.githubusercontent.com/UNiXMIT/UNiXNNTP/main/updates/updates.json"
    }
  },
  "options_ui": {
    "page": "config/config.html",
    "browser_style": false
  },
  "permissions": [
    "alarms",
    "messagesRead",
    "accountsRead",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://discord.com/api/webhooks/*",
    "https://webhook.lewisakura.moe/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "16": "icons/rocket16.png",
    "32": "icons/rocket32.png",
    "64": "icons/rocket64.png",
    "128": "icons/rocket128.png"
  }
}